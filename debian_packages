        1. Edit fstab file
        # <options>
        usrquota,grpquota

        2. $ quotacheck -ugv <MOUNT_POINT>

        3. $ quotaon -av

        4. $ edquota -u <USER>

        5. $ quotastats
           $ repquota <MOUNT_POINT>

    aoetools vblade

        # On share storage
        $ sudo vblade 0 0 eth0 /dev/sda4
        # On client
        $ sudo modprobe aoe
        $ sudo aoe-discover
        $ sudo aoe-stat
        $ sudo mkfs.ext3 /dev/etherd/e0.0
        $ sudo mount /dev/etherd/e0.0 /mnt
        # LVM support
        # Add the following line to /etc/lvm/lvm.conf

            types = [ "aoe", 16 ]

